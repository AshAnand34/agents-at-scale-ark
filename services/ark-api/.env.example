# ARK API Environment Configuration
# Copy this file to .env and modify as needed

# Authentication Configuration
# Set to "true" to completely disable authentication for all routes
# WARNING: Only use this in development or testing environments
ARK_SKIP_AUTH=false

# OKTA JWT Token Validation
# These values are used to validate JWT tokens from OKTA
ARK_OKTA_ISSUER=""
ARK_OKTA_AUDIENCE=""

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=

# Logging Configuration
# Set log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
